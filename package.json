{
  "name": "fanta-softair-ateam",
  "version": "1.0.0",
  "description": "Sistema Fantasy Softair per il club",
  "main": "dist/main.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop fanta-softair-app",
    "pm2:restart": "pm2 restart fanta-softair-app",
    "pm2:delete": "pm2 delete fanta-softair-app",
    "pm2:logs": "pm2 logs fanta-softair-app",
    "pm2:status": "pm2 status",
    "deploy": "npm run build && pm2 restart fanta-softair-app",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "schema:sync": "npm run typeorm -- schema:sync -d src/database/data-source.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "softair",
    "fantasy",
    "a-team"
  ],
  "author": "Michele Picerno",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mysql2": "^3.14.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "jest": "^30.1.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.26",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xMikee/FantaSoftair.git"
  },
  "bugs": {
    "url": "https://github.com/xMikee/FantaSoftair/issues"
  },
  "homepage": "https://github.com/xMikee/FantaSoftair#readme"
}
